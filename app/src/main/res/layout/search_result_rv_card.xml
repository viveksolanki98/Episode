<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchResultContainer_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12sp"
    android:layout_marginBottom="12sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/showTitleInSearchCard_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:height="30dp"
            android:text="Show Title"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/showPosterInSearchCard_iv"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/showDescriptionInSearchCard_txt"
            android:layout_width="248dp"
            android:layout_height="77dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="Description"
            app:layout_constraintBottom_toTopOf="@+id/showDetailsInSearchCard_txt"
            app:layout_constraintStart_toEndOf="@+id/showPosterInSearchCard_iv"
            app:layout_constraintTop_toBottomOf="@+id/showTitleInSearchCard_txt" />

        <ImageView
            android:id="@+id/showPosterInSearchCard_iv"
            android:layout_width="105dp"
            android:layout_height="157.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/showDetailsInSearchCard_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/showPosterInSearchCard_iv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
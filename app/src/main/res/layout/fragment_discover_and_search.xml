<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiscoverAndSearchFragment">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".DiscoverAndSearchFragment">
            <Button
                android:id="@+id/homeLaunch_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="92dp"
                android:text="Home"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.391"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/discoverSearchTitle_txt"
                android:layout_width="398dp"
                android:layout_height="51dp"
                android:gravity="center"
                android:text="@string/hello_blank_fragment"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.461"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/popularShows_rv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/discoverSearchTitle_txt" />

            <TextView
                android:id="@+id/popularShowsLabel_txt"
                android:layout_width="146dp"
                android:layout_height="29dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:text="Popular Shows"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/popularShows_rv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/discoverSearchTitle_txt" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/topRatedShows_rv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/popularShows_rv" />

            <TextView
                android:id="@+id/topRatedShowsLabel_txt"
                android:layout_width="146dp"
                android:layout_height="29dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:text="Top Rated Shows"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/topRatedShows_rv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/popularShows_rv"
                app:layout_constraintVertical_bias="1.0" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/airingToday_rv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topRatedShows_rv"/>

            <TextView
                android:id="@+id/airingTodayLabel_txt"
                android:layout_width="146dp"
                android:layout_height="29dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:text="Airing Today"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/airingToday_rv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topRatedShows_rv"
                app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>